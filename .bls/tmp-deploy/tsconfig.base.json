{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"importHelpers": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
